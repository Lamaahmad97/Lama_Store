@using Lama_Store.Controllers
@model IEnumerable<NewClass>
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    decimal? Total = 5;
}

<section class="cart_area section_padding">
    <div class="container">
      <div class="cart_inner">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
              </tr>
            </thead>
            <tbody>
                @foreach(var item in Model){
              <tr>
                <td>
                  <div class="media">
                    <div class="d-flex">
                     <img src=@Url.Content("~/Image/" + item.Image) asp-append-version="true" 
                     style="border-radius:20%; height:250px;width:250px" />
                    </div>
                    <div class="media-body">
                      <h3>@item.ProductName</h3>
                    </div>
                  </div>
                </td>
                <td>
                  <h5>@item.ProductPrice</h5>
                </td>
                <td>
                  <div class="product_count">
                    <span class="input-number-decrement"> <i class="ti-minus"></i></span>
                    <input class="input-number" type="text" value="1" min="0" max="10">
                    <span class="input-number-increment"> <i class="ti-plus"></i></span>
                  </div>
                </td>
                <td>
                  <h4>@item.ProductPrice</h4>
                </td>
              </tr>
               Total+=item.ProductPrice;
              }
              <tr class="bottom_button">
                <td>
                  <a class="btn_1" asp-action="ViewCart" asp-controller="LlOrders">Update Cart</a>
                </td>
                <td></td>
                <td></td>
                <td>
                
                </td>
              </tr>
              <tr>
                <td></td>
                <td></td>
                <td>
                  <h4>Subtotal</h4>
                </td>
                <td>
                  <h4>@Total</h4>
                </td>
              </tr>
              <tr class="shipping_area">
                <td></td>
                <td></td>
                <td>
                  <h5>Shipping</h5>
                </td>
                <td>
                  <div class="shipping_box">
                    <ul class="list">
                      <li>
                        Flat Rate: $5.00
                      </li>
                    
                    </ul>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
          <div class="checkout_btn_inner float-right">
            <a class="btn_1" href="#">Continue Shopping</a>
            <a class="btn_1 checkout_btn_1" asp-controller="LlOrders" asp-action="Checkout">Proceed to checkout</a>
          </div>
        </div>
      </div>
      </div>
  </section>